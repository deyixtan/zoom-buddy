{
  "name": "Zoom Buddy",
  "description": "Make Zoom recording great again!",
  "version": "1.1.0",
  "manifest_version": 2,
  "icons": {
    "16": "resources/img/16.png",
    "32": "resources/img/32.png",
    "48": "resources/img/48.png",
    "128": "resources/img/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.zoom.us/rec/play/*"],
      "js": ["entry.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "resources/css/bootstrap.min.css",
    "resources/js/socket.io.min.js",
    "components/player.js",
    "components/room-controls.js",
    "main.js"
  ]
}
