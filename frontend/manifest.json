{
  "name": "Zoom Buddy",
  "description": "Make Zoom recording great again!",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "img/16.png",
    "32": "img/32.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://nus-sg.zoom.us/rec/play/*"],
      "js": ["inject.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["socket.io.min.js", "content-script.js"],
  "permissions": ["tabs"]
}
