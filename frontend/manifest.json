{
  "name": "Zoom Buddy",
  "description": "Make Zoom recording great again!",
  "version": "1.1.0",
  "manifest_version": 2,
  "icons": {
    "16": "img/16.png",
    "32": "img/32.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.zoom.us/rec/play/*"],
      "js": ["entry.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "bootstrap.min.css",
    "socket.io.min.js",
    "content-script.js"
  ]
}
